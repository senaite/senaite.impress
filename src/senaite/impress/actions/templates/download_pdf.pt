<div class="download-pdf-modal modal-dialog modal-dialog-centered">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" i18n:translate="">Download PDF</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form name="download-pdf-form"
            class="form"
            method="POST"
            enctype="multipart/form-data"
            tal:attributes="action string:${here/absolute_url}/impress_download_pdf">

        <div class="form-group mt-2">
          <input class="btn btn-sm btn-primary"
                 type="submit"
                 name="download"
                 i18n:attributes="value"
                 value="Download" />
        </div>

        <!-- hidden fields -->
        <input type="hidden" name="submitted" value="1" />
        <input tal:replace="structure context/@@authenticator/authenticator"/>
        <input type="hidden" name="uids" value="" tal:attributes="value request/uids|nothing" />

      </form>
    </div>
  </div>

  <!-- Initialize multi select -->
  <script type="text/javascript">
   $(function() {
   });
  </script>
</div>
